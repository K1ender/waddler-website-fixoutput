---
import Layout from "../ui/Layout.astro";
import Showcase from "@/content/landing/showcase.mdx";
---

<Layout title="Waddler">
  <div class="wrap">
    <div class="landing__wrap">
      <div class="landing__title-wrap">
        <span class="landing__duck-emoji">ðŸ¦†</span>
        <div class="landing__title">Waddler</div>
      </div>
      <div class="landing__description">
        Modern DuckDB and MotherDuck client
      </div>
      <div class="landing__name-meaning">
       Built by drizzle.team
      </div>
      <a href="/docs/overview" class="landing__documentation-btn"
        ><div>Documentation</div>
        <svg
          xmlns="http://www.w3.org/2000/svg"
          width="24"
          height="24"
          viewBox="0 0 24 24"
          fill="none"
          stroke="currentColor"
          stroke-width="2"
          stroke-linecap="round"
          stroke-linejoin="round"
        >
          <line x1="5" y1="12" x2="19" y2="12"></line>
          <polyline points="12 5 19 12 12 19"></polyline>
        </svg>
      </a>
    </div>
    <Showcase />
  </div>
  <script></script>
  <style>
    html[class~="dark"] .landing__title {
      color: #e2e8f0;
    }
    html[class~="dark"] .landing__description {
      color: #e2e8f0;
    }

    html[class~="dark"] .landing__name-meaning {
      color: #999;
    }

    .wrap {
      width: 100%;
      height: fit-content;
      display: flex;
      align-items: center;
      justify-content: center;
      flex-direction: column;
      gap: 72px;
      padding: 100px 0;
    }
    .landing__wrap {
      display: flex;
      flex-direction: column;
      align-items: center;
      text-align: center;
    }

    .landing__title-wrap {
      display: flex;
      align-items: center;
      justify-content: center;
    }

    .landing__title {
      margin-left: 4px;
      font-size: 32px;
      font-weight: 700;
    }

    .landing__duck-emoji {
      font-size: 36px;
      line-height: 36px;
    }

    .landing__description {
      width: 100%;
      font-size: 20px;
      margin-top: 8px;
      font-weight: 600;
    }

    .landing__name-meaning {
      margin-top: 4px;
      font-size: 14px;
      color: #727272;
    }

    html[class~="dark"] .landing__documentation-btn {
      background-color: #e2e8f0;
      color: #282828;
    }

    .landing__documentation-btn {
      margin-top: 40px;
      width: 212px;
      border-radius: 3px;
      color: #ffffff;
      font-size: 16px;
      font-weight: 700;
      line-height: 1;
      height: 48px;
      cursor: pointer;
      display: flex;
      flex-direction: row;
      align-items: center;
      justify-content: center;
      border: none;
      background-color: #282b3b;
      gap: 10px;
    }
    .landing__documentation-btn svg {
      width: 16px;
      height: 16px;
    }
  </style>
  <script>
    window.addEventListener("beforeunload", () => {
      localStorage.setItem("sidebar-scroll", "0");
    });
  </script>
</Layout>
